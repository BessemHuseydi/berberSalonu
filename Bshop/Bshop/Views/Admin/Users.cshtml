@model IEnumerable<Bshop.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
