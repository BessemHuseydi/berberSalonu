@{
    ViewBag.Title = "Randevular";
    var gecmisRandevular = (List<Bshop.Models.Randevu>)ViewBag.GecmisRandevular;
    var gelecekRandevular = (List<Bshop.Models.Randevu>)ViewBag.GelecekRandevular;
}

<h2>Randevular</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Randevu Ekle</a>
</p>

<div>
    <h3>Gelecek Randevular</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Salon</th>
                <th>Çalışan</th>
                <th>Hizmet</th>
                <th>Tarih</th>
                <th>Onay</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (gelecekRandevular != null && gelecekRandevular.Any())
            {
                @foreach (var randevu in gelecekRandevular)
                {
                    <tr>
                        <td>@randevu.Salon.Name</td>
                        <td>@randevu.CalisanHizmet.Calisan.FullName</td>
                        <td>@randevu.CalisanHizmet.Hizmet.Name</td>
                        <td>@randevu.RandevuSaati.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(randevu.Onaylandi ? "Evet" : "Hayır")</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = randevu.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                            <a href="@Url.Action("Delete", new { id = randevu.Id })" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Henüz gelecekteki bir randevunuz yok.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h3>Geçmiş Randevular</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Salon</th>
                <th>Çalışan</th>
                <th>Hizmet</th>
                <th>Tarih</th>
                <th>Onay</th>
            </tr>
        </thead>
        <tbody>
            @if (gecmisRandevular != null && gecmisRandevular.Any())
            {
                @foreach (var randevu in gecmisRandevular)
                {
                    <tr>
                        <td>@randevu.Salon.Name</td>
                        <td>@randevu.CalisanHizmet.Calisan.FullName</td>
                        <td>@randevu.CalisanHizmet.Hizmet.Name</td>
                        <td>@randevu.RandevuSaati.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(randevu.Onaylandi ? "Evet" : "Hayır")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Geçmiş bir randevunuz bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
