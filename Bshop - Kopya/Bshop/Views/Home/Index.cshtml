@{
    ViewData["Title"] = "Home - Berber Shop";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<style>
    .card-img-top {
        object-fit: cover; /* Ensures the image fills the area without distortion */
        height: 200px; /* Fixed height for all images */
        width: 100%; /* Ensures image spans the entire width */
    }

    .hero {
        text-align: center;
        padding: 60px 15px;
        background-color: #f8f9fa;
    }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.25rem;
            margin-bottom: 30px;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 20px;
    }
</style>

<!-- Hero Section -->
<div class="hero">
    <h1>Welcome to Barber Shop</h1>
    <p>Your modern grooming experience starts here.</p>
    <a class="btn btn-primary" asp-controller="Randevu" asp-action="Create">Book an Appointment</a>
</div>

<!-- Services Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card">
                <img src="~/img/sac1.jpg" class="card-img-top" alt="Haircut">
                <div class="card-body">
                    <h5 class="card-title">Haircut</h5>
                    <p class="card-text">Professional haircuts tailored to your style.</p>
                    <a href="/Randevu/Create" class="btn btn-primary">Randevu Al</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/sac2.jpg" class="card-img-top" alt="Shaving">
                <div class="card-body">
                    <h5 class="card-title">Shaving</h5>
                    <p class="card-text">Traditional and modern shaving techniques.</p>
                    <a href="/Randevu/Create" class="btn btn-primary">Randevu Al</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/sac3.jpg" class="card-img-top" alt="Beard Trim">
                <div class="card-body">
                    <h5 class="card-title">Beard Trim</h5>
                    <p class="card-text">Perfectly styled beard trims to enhance your look.</p>
                    <a href="/Randevu/Create" class="btn btn-primary">Randevu Al</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/alet1.jpg" class="card-img-top" alt="Haircut Tools">
                <div class="card-body">
                    <h5 class="card-title">Haircut Tools</h5>
                    <p class="card-text">Premium-quality tools for precise and professional haircuts.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/alet2.jpg" class="card-img-top" alt="Modern Barber Shop">
                <div class="card-body">
                    <h5 class="card-title">Modern Barber Shop</h5>
                    <p class="card-text">Experience the ultimate grooming in our state-of-the-art barber shop.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/alet3.jpg" class="card-img-top" alt="Beard Care Tools">
                <div class="card-body">
                    <h5 class="card-title">Beard Care Tools</h5>
                    <p class="card-text">High-grade tools designed for flawless beard grooming and styling.</p>
                </div>
            </div>
        </div>
    </div>
</div>
