@model IEnumerable<Bshop.Models.Salon>

@{
    ViewData["Title"] = "Salon Yönetimi";
}

<h2>@ViewData["Title"]</h2>
<!-- TempData mesajını gösterme -->
@if (TempData["msj"] != null)
{
    var mesaj = TempData["msj"].ToString();
    var alertClass = mesaj.Contains("güncellendi") ? "alert-success" : "alert-danger";
    <div class="alert @alertClass alert-dismissible fade show" role="alert">
        @mesaj
        <button type="button" class="close" data-dismiss="alert" aria-label="Kapat">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<a asp-action="CreateSalon" class="btn btn-success mb-3">Salon Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Salon Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>
                    <a asp-action="EditSalon" asp-route-id="@salon.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="DeleteSalon" asp-route-id="@salon.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
