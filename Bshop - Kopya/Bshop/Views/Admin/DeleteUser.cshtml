@model Bshop.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h2>@ViewData["Title"]</h2>

<h3>Bu kullanıcıyı silmek istediğinize emin misiniz?</h3>

<div>
    <h4>Kullanıcı Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">İsim</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>

    <form asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Users" class="btn btn-secondary">İptal</a>
    </form>
</div>
