@model WEB.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevu Sil</h1>

<h3>Bu randevuyu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Kullanıcı
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Name
        </dd>
        <dt class="col-sm-2">
            Salon
        </dt>
        <dd class="col-sm-10">
            @Model.Salon?.Name
        </dd>
        <dt class="col-sm-2">
            Hizmet
        </dt>
        <dd class="col-sm-10">
            @Model.Hizmet?.Name
        </dd>
        <dt class="col-sm-2">
            Randevu Zamanı
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentTime.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
