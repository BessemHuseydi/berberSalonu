@model IEnumerable<WEB.Models.Randevu>

<div class="container mt-5">
    <h2>Geçmiş Randevularım</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Salon</th>
                <th>Hizmet</th>
                <th>Randevu Tarihi</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Salon.Name</td>
                    <td>@item.Hizmet.Name</td>
                    <td>@item.AppointmentTime</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
