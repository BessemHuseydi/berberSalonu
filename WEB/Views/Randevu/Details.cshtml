@model WEB.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detayları";
}

<h1>Randevu Detayları</h1>

<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Kullanıcı
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Name
        </dd>
        <dt class="col-sm-2">
            Salon
        </dt>
        <dd class="col-sm-10">
            @Model.Salon?.Name
        </dd>
        <dt class="col-sm-2">
            Hizmet
        </dt>
        
        <dt class="col-sm-2">
            Randevu Zamanı
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentTime.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a> |
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>
