@model WEB.Models.User

<div class="container mt-5">
    <h2 class="text-center">Kayıt Ol</h2>
    <form asp-action="SignUp" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Name">Adınız</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Phone">Telefon</label>
            <input type="text" class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">E-posta</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PasswordHash">Şifre</label>
            <input type="password" class="form-control" asp-for="PasswordHash" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Kayıt Ol</button>
    </form>
</div>
