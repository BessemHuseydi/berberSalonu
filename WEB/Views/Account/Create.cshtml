@model WEB.Models.User

<div class="container mt-5">
    <h2 class="text-center">Yeni Kullanıcı Ekle</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label">Ad</label>
            <input asp-for="Name" class="form-control" placeholder="Adınızı girin" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="form-label">Telefon</label>
            <input asp-for="Phone" class="form-control" placeholder="Telefon numaranızı girin" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordHash" class="form-label">Şifre</label>
            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Şifrenizi girin" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Kaydet</button>
    </form>
</div>
