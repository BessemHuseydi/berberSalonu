@{
    ViewData["Title"] = "Hoşgeldiniz";
    var userName = TempData["UserName"]?.ToString() ?? "Kullanıcı";
}

<div class="container mt-5 text-center">
    <h2 class="text-success">Hoşgeldiniz, @userName!</h2>
    <p>Sistemimize giriş yaptığınız için teşekkür ederiz. Birkaç saniye içinde yönlendirileceksiniz...</p>

    <div class="spinner-border text-primary mt-3" role="status">
        <span class="visually-hidden">Yükleniyor...</span>
    </div>

    <script>
        setTimeout(function() {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 5000); // 5 saniye bekleme süresi
    </script>
</div>
