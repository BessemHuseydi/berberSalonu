@model WEB.Models.User


<div class="container mt-5 login-container">
    <h2 class="text-center">Giriş Yap</h2>

    @if (TempData["msj"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["msj"]</div>
    }

    <form asp-action="UsrLogin222" asp-controller="Account" method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email" class="control-label">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordHash" class="control-label">Şifre</label>
            <input asp-for="PasswordHash" class="form-control" placeholder="Şifrenizi girin" type="password" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Giriş Yap</button>
    </form>

    <div class="text-center mt-4">
        <p class="register-text">
            Hesabınız yok mu?
            <a href="@Url.Action("SignUp", "Account")" class="register-link">Kayıt Ol</a>
        </p>
    </div>
    <div class="text-center mt-4">
        <p class="register-text">
            Hesabınızda ?
            <a href="@Url.Action("Logout", "Account")" class="register-link">Çıkış Yap</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

