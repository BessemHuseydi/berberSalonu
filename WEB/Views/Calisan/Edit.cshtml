@model WEB.Models.Calisan

<div class="container mt-5">
    <h2 class="text-center">Çalışan Düzenle</h2>
    <form asp-action="Edit" asp-controller="Calisan" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Name">Çalışan Adı</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Çalışan adını girin" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="SalonId">Salon</label>
            <select class="form-control" asp-for="SalonId" asp-items="@(new SelectList(ViewBag.Salonlar, "Id", "Name"))">
                <option value="">Salon Seçin</option>
            </select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Position">Pozisyon</label>
            <input type="text" class="form-control" asp-for="Position" placeholder="Çalışan pozisyonunu girin" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ExperienceYears">Deneyim Yılı</label>
            <input type="number" class="form-control" asp-for="ExperienceYears" placeholder="Deneyim yılını girin" />
            <span asp-validation-for="ExperienceYears" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
        <a href="@Url.Action("Index", "Calisan")" class="btn btn-secondary mt-3">İptal</a>
    </form>
</div>
