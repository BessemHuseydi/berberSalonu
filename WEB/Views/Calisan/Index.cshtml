@model IEnumerable<WEB.Models.Calisan>

<h2>Çalışan Listesi</h2>
<a href="/Calisan/Create" class="btn btn-primary mb-3">Yeni Çalışan Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Pozisyon</th>
            <th>Deneyim (Yıl)</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Name</td>
                <td>@calisan.Position</td>
                <td>@calisan.ExperienceYears</td>
                <td>@calisan.Salon?.Name</td>
                <td>
                    <a href="/Calisan/Details/@calisan.Id" class="btn btn-info btn-sm">Detay</a>
                    <a href="/Calisan/Edit/@calisan.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <form method="post" action="/Calisan/Delete/@calisan.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
